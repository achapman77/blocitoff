<h1>Task List</h1>

<table class = "table table-bordered table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th class = "TimeLeft-Column">Time Left</th>
      <th class = "Completed-Column">Done?</th>
      <th class = "Completed-Column">Delete?</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr id='<%= "task-#{task.id}" %>'>
        <td><%= task.description %></td>
        <td align="center"><%= task.days_left %></td>
        <td align="center">
          <i class="glyphicon glyphicon-ok-sign green", onclick="myFunction()"></i>
          <i class="glyphicon glyphicon-exclamation-sign red", onclick="myFunction()"></i>
        </td>>
        <td align="center">
          <%= link_to '<i class="glyphicon glyphicon-remove red"></i>'.html_safe, task,  method: :delete, remote: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <h4> Add Task to List</h4>
    <%= form_for @task do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Save", class: 'btn btn-primary'%>
  <% end %>
</div>

